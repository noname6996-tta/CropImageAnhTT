<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_fixed_size"
    android:background="@color/black"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/toolbar_back"
            android:layout_width="@dimen/width_iv_back"
            android:layout_height="@dimen/height_iv_back"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding_iv_back"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_nav_back" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/toolbar_move_and_scale"
            style="@style/TextViewStyleLargeBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Move and scale" />

    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>